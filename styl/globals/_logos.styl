.logo
  display: inline-block
  text-indent: -9999em
  background: no-repeat center center
  background-size: contain
  opacity: 1
  transition: opacity .3s ease-in

  &:hover
    opacity: .6

.logo-requiresafe
  background-image: $logo-requiresafe

.logo-andyet
  background-image: $logo-andyet

.logo-lift
  background-image: $logo-lift

$logo-nodesecurity = url(unquote('data:image/svg+xml;base64,'))